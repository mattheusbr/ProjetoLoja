@model IEnumerable<MasterPc.Models.Usuario>

    <title>MasterPcAdmin - Lista usuarios</title>

<p>
    @Html.ActionLink("Incluir Novo Usuario", "Create", "LoginAdmController", new { @class = "btn btn-success ml-md-3" })
</p>


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Lista de usuarios
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Genero)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CPF)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Login)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoUsuario)
                        </th>
                        <th>Alterações</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Genero)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CPF)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Login)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoUsuario)
                        </th>
                        <th>Alterações</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>
                                @usuario.Nome
                            </td>
                            <td>
                                @usuario.Genero.GeneroUsuario
                            </td>
                            <td>
                                @usuario.CPF
                            </td>
                            <td>
                                @usuario.Login
                            </td>
                            <td>
                                @usuario.TipoUsuario
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { Id = usuario.ID }, new { @class = "btn btn-sm btn-warning" })
                                @Html.ActionLink("Endereço", "Details", new { id = usuario.ID }, new { @class = "btn btn-sm btn-secondary " })
                                @Html.ActionLink("Deletar", "Delete", new { id = usuario.ID }, new { @class = "btn btn-sm btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>