@model MasterPc.Models.Produto

<title>MasterPcAdmin - Detalhar produto</title>

<div class="card mb-3">
    <div class="card-header">
        &nbsp;
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            
            <dt>
                Imagem Produto
            </dt>
            <dd>
                @*ver se o produto tem imagem ou n, se n tiver adicionar o jpg (semimagem)*@
                @if (!String.IsNullOrWhiteSpace(Model.Img))
                {
                    <img src="data:image/jpeg;base64,@Model.Img" style="width: 150px">
                }
                else
                {
                    <img src="~/Content/semimagemjpg.jpg" style="width: 180px" class="mr-4"/>
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Categoria.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Preco)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Preco)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantidade)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </dl>
        <p>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary"}) |
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary"})
                </div>
            </div>
        </p>
    </div>
    <div class="card-footer small text-muted">Horario de Alteração @DateTime.Now </div>
</div>
