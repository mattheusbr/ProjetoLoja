@model MasterPc.Models.Produto

@{
    ViewBag.Title = "Excluir";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card mb-3">
        <div class="card-header">
            <h4>Você deseja deletar esse produto ?</h4>
        </div>
        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Categoria.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Preco)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Preco)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Quantidade)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
            </dl>
            <p>
                <div class="form-actions no-color">
                    <input type="submit" value="Sim" class="btn btn-danger" /> 
                    <a align="bottom" href="~/Produtoes/Index" class="btn btn-primary">Não</a>
                </div>
            </p>
        </div>
        <div class="card-footer small text-muted">Horario de Alteração @DateTime.Now </div>
    </div>
}

