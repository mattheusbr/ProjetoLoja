@model MasterPc.Models.Compra

@section Styles
{
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/css/style.css">
}
<div class="container">
    <div class="cart-container">
        <header>
            <h3 style="text-align: center">Carrinho de Compras</h3>
        </header>
        <div class="cart-body">
            <div class="cart-item">
                @foreach (var compra in Model.CompraProdutos)
                {

                    <div class="cart-row">
                        <div class="cart-row-cell pic">
                            <a id="btnRemove" href="@Url.Action("RemoverItem", "Carrinho", new { id = compra.Id })">-</a>
                            <span></span>
                        </div>
                        <div class="cart-row-cell desc">
                            <h5>@(compra?.Produto.Nome)</h5>
                            <p>#@compra.ProdutoId</p>
                        </div>
                        <div class="cart-row-cell quant">
                            <ul>
                                <li>
                                    @compra.Quantidade                                    
                                </li>
                            </ul>
                        </div>
                        <div class="cart-row-cell amount">
                            <p>R$@compra.Produto.Preco </p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <footer>
            <div class="totals">
                <p class="total-label">Total</p>
                <p class="total-amount">
                    R$@Model.CompraProdutos.Sum(c => c.Quantidade * c.Produto.Preco)
                </p>
            </div>
            <div>
                @Html.ActionLink("Finalizar", "Finalizar", "Carrinho", new { id = Model.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Continuar Comprando", "Catalogo", "Loja", new { id = Model.Id }, new { @class = "btn btn-primary" })

            </div>
        </footer>
    </div>
</div>
@section Scripts
{
    <script type="text/javascript">
        $(function () {

        })
    </script>
}